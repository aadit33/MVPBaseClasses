<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:endColor="#44af7c"
                android:startColor="#84fab0" />
            <corners android:radius="4dp" />
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="2dp"
                android:top="1dp" />
        </shape>
    </item>
</layer-list>
